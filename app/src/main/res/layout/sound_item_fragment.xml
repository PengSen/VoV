<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/activity_content_margin_small"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:layout_marginTop="@dimen/activity_content_margin">
    <ImageView
        android:id="@+id/iv_sound_image_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal|center_vertical"
        android:contentDescription="@null"/>
      <com.sen.vov.widget.CusotmProgressView
        android:id="@+id/iv_play_sound_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_click_play"
        android:layout_gravity="center"
        android:contentDescription="@null"/>
      <com.sen.vov.widget.CusotmProgressView
        android:id="@+id/iv_pause_sound_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_click_pause"
        android:visibility="gone"
        android:layout_gravity="center"
        android:contentDescription="@null"/>
     <!--<com.sen.vov.widget.CusotmProgressView
        android:id="@+id/iv_down_sound_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_click_down"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:contentDescription="@null"/>-->
    <ImageView
        android:id="@+id/iv_replay_sound_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sound_click_replay"
        android:layout_gravity="center_horizontal|center_vertical"
        android:visibility="gone"
        android:contentDescription="@null"/>
    <TextView
        android:id="@+id/tv_sound_text_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingStart="@dimen/activity_content_margin_small"
        android:paddingEnd="@dimen/activity_content_margin_small"
        android:textSize="@dimen/text_size_common"
        android:textColor="@color/background"
        android:background="#7d000000"
        />
</android.support.v7.widget.CardView>